<h1>Darbinieku saraksts</h1>

<table class="table table-striped table-bordered table-hover">
  <thead class="table-dark">
    <tr>
      <th>Uzsākšanas laiks:</th>
      <th>Nodošanas laiks:</th>
      <th>Vārds</th>
      <th>Uzvārds</th>
      <th>Epasts</th>
      <th>Telefons</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @darbiniekis.each do |darbinieki| %>
      <tr>
        <td><%= darbinieki.starta_laiks %></td>
        <td><%= darbinieki.beigu_laiks %></td>
        <td><%= darbinieki.vards %></td>
        <td><%= darbinieki.uzvards %></td>
        <td><%= darbinieki.epasts %></td>
        <td><%= darbinieki.telefons %></td>
        <td><%= link_to 'Info', darbinieki, class:"btn btn-outline-info btn-sm" %></td>
        <td><%= link_to 'Rediģēt', edit_darbinieki_path(darbinieki), class:"btn btn-outline-primary btn-sm" %></td>
        <td><%= link_to 'Dzēst', darbinieki, method: :delete, data: { confirm: 'Vai tu esi pārliecināts?' }, class: "btn btn-outline-danger btn-sm" %></td>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Rezervēt', new_darbinieki_path, class:"btn btn-secondary" %>
